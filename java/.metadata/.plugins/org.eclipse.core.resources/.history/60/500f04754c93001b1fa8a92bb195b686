package Exemplos;

import java.util.Scanner;

public class Exercicio5 {
	/*5. Faça um sistema que leia as 3 notas de um aluno e calcule a média final deste
	aluno. Considerar que a média é ponderada e que o peso das notas é: 2,3 e 5,
	respectivamente.*/
	
	public static void main(String args[])
	{
		Scanner leia =  new Scanner(System.in);
		String nome;
		double mediaP=0;
		double nota1=0, nota2=0, nota3=0;
		double peso1=2, peso2=3, peso3=5;
		
		System.out.println("Entre com seu nome: ");
		nome = leia.next();
		
		System.out.print("Entre com a 1ª nota: ");
		nota1 = leia.nextDouble();
		
		System.out.print("Entre com a 2ª nota: ");
		nota2 = leia.nextDouble();
		
		System.out.print("Entre com a 3ª nota: ");
		nota3 = leia.nextDouble();
		
		nota1 = nota1*peso1;
		nota2 = nota2*peso2;
		nota3 = nota3*peso3;
		mediaP = (nota1 + nota2+ nota3) / 10;
		
		System.out.printf("Aluno: "+nome+"\nSua média é: %.2f",mediaP);
		
		
			
	}
}
